        </script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        <script>
          $(".toggle-div-1, .toggle-div-2, .toggle-div-3").toggle();

          $("label[for='option1']").click(() => {
            $(".toggle-div-1").toggle(500);
            $(".toggle-div-2, .toggle-div-3").hide(500)
          })
          $("label[for='option2']").click(() => {
            $(".toggle-div-2").toggle(500);
            $(".toggle-div-1, .toggle-div-3").hide(500)
          })
          $("label[for='option3']").click(() => {
            $(".toggle-div-3").toggle(500);
            $(".toggle-div-1, .toggle-div-2").hide(500)
          })
        </script>

        <% if (diagram_case === "ev_cost") { %>
        <script>
          var options_2 = {
            animation: {
              onComplete: done
            }
          }
          let myChart = document.getElementById('myChart').getContext('2d');

          var dt = <%- JSON.stringify(dt) %>
          console.log(dt[0])

          let massPopChart = new Chart(myChart, {
            type: 'bar', //bar, horizontalBar, pie, line, doughnut, radar, polarArea
            data: {
              labels: dt[0],
              datasets: [{
                label: 'Total charging cost',
                data: dt[1] 
              }]
            },
            options: options_2
          });

          function done() {
            var url_share = document.getElementById("myChart").toDataURL();
            console.log(url_share)
            var a = document.getElementById('export-btn');
            a.href = url_share
            a.download = 'columns_chart';

            $('#share-btn').click(function() {
              var newTab = window.open();
              newTab.document.body.innerHTML = '<img src="' + url_share + '" width="1000px" height="auto">';
            })
          }



        </script>
        <% } %>
       <% if (diagram_case ==="prov_energy" ) {%>
        <script>
          var options_2 = {
            animation: {
              onComplete: done
            }
          }
          let myChart = document.getElementById('myChart').getContext('2d');

          var dt = <%- JSON.stringify(dt) %>

          let massPopChart = new Chart(myChart, {
            type: 'pie', //bar, horizontalBar, pie, line, doughnut, radar, polarArea
            data: {
              labels: dt[0],
              datasets: [{
                label: 'Total energy provided',
                data: dt[1],
                backgroundColor: getColors(dt[1].length)
              }]
            },
            options: options_2

          });

          function getColors(length){
            let pallet = ["#0074D9", "#FF4136", "#2ECC40", "#FF851B", "#7FDBFF", "#B10DC9", "#FFDC00", "#001f3f", "#39CCCC", "#01FF70", "#85144b", "#F012BE", "#3D9970", "#111111", "#AAAAAA"];
            let colors = [];

            for(let i = 0; i < length; i++) {
              colors.push(pallet[i % pallet.length]);
            }

            return colors;
          }
          function done() {
            var url_share = document.getElementById("myChart").toDataURL();
            console.log(url_share)
            var a = document.getElementById('export-btn');
            a.href = url_share
            a.download = 'pie_chart';

            $('#share-btn').click(function() {
              var newTab = window.open();
              newTab.document.body.innerHTML = '<img src="' + url_share + '" width="1000px" height="auto">';
            })
            
          }



        </script>

         <% } %>

